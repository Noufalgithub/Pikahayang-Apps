<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llKosong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_info_outline_big"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Data Kosong!"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hitam"
        android:padding="8dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="3dp">
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext"
                android:editable="false"
                android:padding="10dp"
                android:textSize="15sp"
                android:hint="   Cari produk desain + kain.."
                android:drawableLeft="@drawable/ic_search"/>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llFiltering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/putih"
        android:layout_below="@id/rlSearchView"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/filterJK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:elevation="5dp"
            android:layout_margin="2dp"
            app:cardMaxElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:text="Filter by gender"/>
                    <ImageButton
                        android:id="@+id/ibArrowDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/putih"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_keyboard_arrow_down"/>
                    <ImageButton
                        android:id="@+id/ibArrowUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/putih"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_keyboard_arrow_up"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlRadioBtnJK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <RadioGroup
                        android:id="@+id/rgJK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rbLakilaki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laki-laki"/>
                        <RadioButton
                            android:id="@+id/rbPerempuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"/>
                    </RadioGroup>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnOkeJK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="oke"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/filterJenisBatik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:elevation="5dp"
            app:cardMaxElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:text="Filter by jenis batik"/>
                    <ImageButton
                        android:id="@+id/ibArrowDownJB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/putih"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_keyboard_arrow_down"/>
                    <ImageButton
                        android:id="@+id/ibArrowUpJB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/putih"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_keyboard_arrow_up"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlRadioBtnJB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <RadioGroup
                        android:id="@+id/rgJB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rbBatikTulis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batik Tulis"/>
                        <RadioButton
                            android:id="@+id/rbBatikCap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batik Cap"/>
                        <RadioButton
                            android:id="@+id/rbBatikPrint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batik Print"/>
                    </RadioGroup>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnOkeJB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="oke"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llFiltering">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            android:background="@color/putih"
            android:elevation="8dp">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_desainpluskain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:duration="500">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/placeholder_batik"/>
                    <include layout="@layout/placeholder_batik"/>
                    <include layout="@layout/placeholder_batik"/>
                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="3dp"
                android:background="@color/putih">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDesainPlusKain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical">

                </android.support.v7.widget.RecyclerView>

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>